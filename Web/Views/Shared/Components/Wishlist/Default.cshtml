@model ICollection<ProductViewModel>

@if (Model.Count > 0)
{
    @foreach (var product in Model)
    {
        <div>
            <i>@product.Name, </i>
            <i class="text-success">$@product.Price</i>
            <hr />
        </div>
    }
    <h5>Total: <i class="text-success">$@Model.Sum(p => p.Price)</i></h5>
}
else
{
    <i>Your wishlist is empty. Consider adding some products.</i>
}