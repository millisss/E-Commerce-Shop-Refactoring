@model CreateProductBindingModel
@{
    ViewData["Title"] = "Create";
}

<div class="row w-100 m-0">
    <div class="offset-md-6 col-md-5 container w-100">
        <h2>Create Product For Sale</h2>
        <hr class="hr-2" />
        <form method="post">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" required placeholder="Product Name..." class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageURI">Product Image</label>
                    <input asp-for="ImageURI" type="text" placeholder="URI Address..." class="form-control" />
                    <span asp-validation-for="ImageURI" class="text-danger"></span>
                </div>
                <label asp-for="Price"></label>:
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input asp-for="Price" type="text" required placeholder="How Much Does it Cost..." class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="Description">Product Description:</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Describe your product..." rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <hr />
                <div>
                    <input type="submit" value="Create" class="btn btn-info btn-lg btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
